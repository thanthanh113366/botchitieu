# Zalo Bot Configuration
# Nếu dùng Zalo Bot Platform (https://bot.zaloplatforms.com): 
#   - ZALO_ACCESS_TOKEN = Bot Token từ Zalo Bot Platform
#   - ZALO_USE_NEW_API=true
# Nếu dùng Zalo Developer Console (https://developers.zalo.me):
#   - ZALO_ACCESS_TOKEN = Access Token từ Developer Console
#   - ZALO_USE_NEW_API=false (hoặc không set)
ZALO_ACCESS_TOKEN=your_zalo_access_token_or_bot_token_here
ZALO_SECRET_KEY=your_zalo_secret_key_here  # Có thể để trống nếu không có (sẽ bỏ qua verification)
ZALO_OA_ID=your_zalo_oa_id_here  # Có thể để trống
ZALO_USE_NEW_API=false

# Google Sheets Configuration
GOOGLE_CREDENTIALS_PATH=./credentials/service_account.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Optional: For Vercel deployment (base64 encoded credentials)
# GOOGLE_CREDENTIALS_BASE64=your_base64_encoded_json_here

